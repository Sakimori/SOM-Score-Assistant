<ContentDialog
    x:Class="SOM_Score_Assistant.AddTeamDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SOM_Score_Assistant"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="TITLE"
    PrimaryButtonText="Set"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    DefaultButton="Primary">

    <Grid>
        <TextBox Name="InputAwayName" HorizontalAlignment="Center" Margin="0,10,0,0" PlaceholderText="Away Team Name" TextWrapping="NoWrap" VerticalAlignment="Top" Width="270"/>
        <TextBox x:Name="InputAwayTrigram" HorizontalAlignment="Center" Margin="0,47,0,0" PlaceholderText="Away Team Trigram" TextWrapping="NoWrap" VerticalAlignment="Top" Width="270"/>
        <TextBox x:Name="InputHomeName" HorizontalAlignment="Center" Margin="0,84,0,0" PlaceholderText="Home Team Name" TextWrapping="NoWrap" VerticalAlignment="Top" Width="270"/>
        <TextBox x:Name="InputHomeTrigram" HorizontalAlignment="Center" Margin="0,121,0,0" PlaceholderText="Home Team Trigram" TextWrapping="NoWrap" VerticalAlignment="Top" Width="270"/>
    </Grid>
</ContentDialog>
